# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.rst]
indent_size = 2

[*.sh]
end_of_line = lf
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
